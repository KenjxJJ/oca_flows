<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="oca_employees_view_form" model="ir.ui.view">
            <field name="name">oca.employees.form</field>
            <field name="model">oca.employees</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <group>
                                <field name="category_ids"/>
                            </group>
                            <group>
                                <field name="qualifications"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="oca_employee_view_list" model="ir.ui.view">
            <field name="name">oca.employee.list</field>
            <field name="model">oca.employees</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="category_ids" widget="many2many_tags"/>
                    <field name="work_phone"/>
                    <field name="company_id"/>
                    <field name="qualifications" widget="many2many_tags"/>
                </list>
            </field>
        </record>

        <record id="oca_employees_view_action" model="ir.actions.act_window">
            <field name="name">oca.employees</field>
            <field name="res_model">oca.employees</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>