<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="oca_flows_list">
            <field name="name">oca.flows</field>
            <field name="model">oca.flows</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="start_date"/>
                    <field name="duration"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="oca_flows_view_form" model="ir.ui.view">
            <field name="name">oca.flows.form</field>
            <field name="model">oca.flows</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_open_requests" type="object" class="oe_stat_button" icon="fa-file">
                                <field name="requests_count" widget="statinfo" string="Customer Requests"/>
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>

                        </div>
                        <group>
                            <group>
                                <field name="start_date"/>
                                <field name="list_price" string="Sales Price" widget="monetary"
                                       currency_field="currency_id"
                                />
                            </group>
                            <group>
                                <field name="end_date"/>
                                <field name="customer_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"
                                       placeholder="Enter a detailed description of this flow process..."/>
                            </page>
                            <page string="Checklist">
                                <field name="activity_checklist"/>
                            </page>
                            <page string="Customer Requests">
                                <field name="request_ids"/>
                            </page>
                            <page string="Settings">
                                <field name="requires_prereq" widget="boolean"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="oca_flow_search_view" model="ir.ui.view">
            <field name="name">oca.flows.search</field>
            <field name="model">oca.flows</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- Pivot View-->
        <record id="oca_flow_pivot_view" model="ir.ui.view">
            <field name="name">oca.flows.pivot</field>
            <field name="model">oca.flows</field>
            <field name="arch" type="xml">
                <pivot sample="1">
                    <field name="create_date" type="row"/>
                    <field name="duration" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Kanban -->
        <record id="oca_flows_kanban_view" model="ir.ui.view">
            <field name="name">oca.flows.kanban</field>
            <field name="model">oca.flows</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="description" readonly="1" force_save="0"/>
                    <templates>
                        <t t-name="card">
                            <field name="name" class="fw-bold fs-5"/>
                            <span>
                                Duration
                                <field name="duration"/>
                            </span>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="oca_flows_customers_action" model="ir.actions.act_window">
            <field name="name">OCA Customers</field>
            <field name="res_model">res.partner</field>
            <field name="domain">[('is_oca_customer','=', True)]</field>
            <field name="context">
                {
                'search_default_customer': 1,
                'default_is_oca_customer': 1,
                'res_partner_search_mode': 'customer',
                'default_is_company': True,
                'default_customer_rank': 1
                }
            </field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="oca_flows_action_window">
            <field name="name">Flow Management</field>
            <field name="res_model">oca.flows</field>
            <field name="view_mode">list,form,kanban,pivot,graph</field>
        </record>

    </data>
</odoo>
